PORT=8080
JWT_SECRET=change-this-to-a-long-random-secret
JWT_TTL_SECONDS=604800
APP_BASE_URL=

# Railway Postgres (recommended in production)
DATABASE_URL=
PG_SSL=true
REQUIRE_POSTGRES=false

ADMIN_EMAIL=admin@xerivolearn.com
ADMIN_PASSWORD=change-this-admin-password
EDUCATOR_EMAIL=educator@xerivolearn.com
EDUCATOR_PASSWORD=change-this-educator-password
EDUCATOR_NAME=Xerivo Educator

# Password reset settings
PASSWORD_RESET_TTL_MINUTES=30
PASSWORD_RESET_DEBUG=false

# Parent email verification (recommended in production)
EMAIL_VERIFICATION_REQUIRED=true
EMAIL_VERIFICATION_TTL_HOURS=48
EMAIL_VERIFICATION_DEBUG=false
EMAIL_VERIFICATION_FROM_EMAIL=

# Password reset delivery (option 1: SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL=

# Password reset delivery (option 2: Resend)
PASSWORD_RESET_FROM_EMAIL=
RESEND_API_KEY=

# Password reset delivery (option 3: custom webhook/email worker)
PASSWORD_RESET_WEBHOOK_URL=

# Parent signup captcha settings
CAPTCHA_TTL_MINUTES=10

# Optional legacy admin token fallback (can be left empty)
ADMIN_TOKEN=
ALLOW_LEGACY_ADMIN_TOKEN=false
